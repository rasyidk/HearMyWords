<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/maincolor"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/maincolor">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/mainmargin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_baseline_account_circle_24"/>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/mainmargin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:padding="0dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USERNAME"/>

                        <TextView
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="username@gmail.com"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_top"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/thirdcolorgrey"
            android:layout_margin="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_info_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="About us"
                            android:paddingLeft="@dimen/mainmargin"
                            android:textColor="@color/black"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                   />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_create_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Suggestions"
                            android:paddingLeft="@dimen/mainmargin"
                            android:textColor="@color/black"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_share_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/mainmargin"
                            android:layout_centerVertical="true"
                            android:text="Share"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_call_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/mainmargin"
                            android:layout_centerVertical="true"
                            android:text="Help"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_privacy_tip_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/mainmargin"
                            android:layout_centerVertical="true"
                            android:text="Privacy Policy"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/mainmargin"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginEnd="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:src="@drawable/ic_baseline_rule_24" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/mainmargin"
                        android:layout_marginBottom="@dimen/mainmargin"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/mainmargin"
                            android:layout_centerVertical="true"
                            android:text="Terms and Conditions"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_margin="@dimen/mainmargin"/>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/mainmargin"
            android:layout_width="match_parent"
            android:layout_marginBottom="90dp"
            app:cardCornerRadius="@dimen/mainmargin"
            app:cardBackgroundColor="@color/maincolor"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mainmargin"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    </LinearLayout>
</ScrollView>